<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="Main.AboutWindow"
        Title="About" Width="400" Height="300" >
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
    </Grid.RowDefinitions>

    <Border Grid.Row="0" Padding="10" VerticalAlignment="Center" >
      <TextBlock Text="Hello, Nice to meed you."
        HorizontalAlignment="Center"/>
    </Border>
    
    <Border Grid.Row="1" Padding="20, 10">
      <TextBlock Name="labelVersion" Text="Version"/>
    </Border>

    <Border Grid.Row="2" Padding="20" Background="#eee">
      <Button Content="OK" Click="ok_Click" 
        HorizontalAlignment="Center"/>
    </Border>

  </Grid>
</Window>
